<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.heitian.ssm.dao.CustomerDao">

    <resultMap id="customerMap" type="com.heitian.ssm.model.Customer">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="telephone" property="telephone" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="BIGINT"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="is_email_verified" property="isEmailVerified" jdbcType="TINYINT"/>
        <result column="balance" property="balance" jdbcType="BIGINT"/>
    </resultMap>
    
    <select id="getCustomerByTel" parameterType="java.lang.String" resultMap="customerMap">
        SELECT id,name,telephone,status,password,email,is_email_verified,balance/100 balance
        FROM customer
        WHERE telephone = #{telephone}
    </select>

    <select id="getCustomerByEmail" parameterType="java.lang.String" resultMap="customerMap">
        SELECT id,name,telephone,status,password,email,is_email_verified,balance/100 balance
        FROM customer
        WHERE email = #{email}
    </select>

    <select id="getCustomerById" parameterType="long" resultMap="customerMap">
        SELECT id,name,telephone,status,password,email,is_email_verified,balance/100 balance
        FROM customer
        WHERE id = #{id}
    </select>
    
    <update id="activateCustomerEmail">
        UPDATE customer
        SET
        is_email_verified = 1
        WHERE
        email= #{email}
        AND
        telephone= #{telephone}
    </update>

    <insert id="addCustomer" parameterType="com.heitian.ssm.model.Customer">
        INSERT INTO customer
        (
        name,
        telephone,
        password,
        email
        )
        VALUES
        (
        #{name},
        #{telephone},
        #{password},
        #{email}
        )
    </insert>
    
    <update id="updateBalance" >
        UPDATE `customer` set balance= #{balance} * 100
        WHERE email=#{email}
    </update>
    
    
</mapper>